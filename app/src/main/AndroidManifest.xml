    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/columpio_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/columpio_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlanTorizExamen">
        <activity android:name=".MyListActivity"></activity>
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SurveyActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".DetailActivity" />
        <activity android:name=".EditActivity" />
        <activity android:name=".LoginActivity">
        </activity>
    </application>

</manifest>